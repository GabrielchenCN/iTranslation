{
    "name": "iTranslation",
    "version": "0.01",
    "description": "a smart, quick and light translation extension",
    "permissions": ["declarativeContent","storage","contextMenus", "tabs"],
    "background": {
      "scripts": ["translation.js","index.js","storage.js"],
      "persistent": false
    },
    "browser_action": {
        "default_popup": "pages/popup.html",
        "default_icon": {
            "16": "images/translation16.png",
            "32": "images/translation32.png",
            "48": "images/translation48.png",
            "64": "images/translation64.png",
            "128": "images/translation128.png"
          }
    },
    "icons": {
        "16": "images/translation16.png",
        "32": "images/translation32.png",
        "48": "images/translation48.png",
        "64": "images/translation64.png",
        "128": "images/translation128.png"
      },
    "manifest_version": 2
  }